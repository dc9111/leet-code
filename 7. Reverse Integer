class Solution {
    public int reverse(int x) {
        
        int result = 0;
        
        while (x != 0) {
            int tail = x % 10;
            int newNum = result * 10 + tail;
            
            if ((newNum - tail)/10 != result) {
                return 0;
            }
            
            result = newNum;
            x = x / 10;
        }
        return result;
    }
}

// Time Complexity: O(n)
