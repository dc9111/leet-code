class Solution {
    public int romanToInt(String s) {
        
        int value = 0;
        int last = 1000;
        int len = s.length();
        
        for (int i=0; i<len; i++) {
            
            int v =  getValue(s.charAt(i));
            if (v > last) {
                value = value + v - last * 2;
                last = v;
            } else {
                value += v;
                last = v;
            }
        }
        
        return value;       
    }
    
    private int getValue(char c) {
        
        switch(c) {
            case 'I': return 1;
            case 'V': return 5;
            case 'X': return 10;
            case 'L': return 50;    
            case 'C': return 100;
            case 'D': return 500;
            case 'M': return 1000;
            default : return 0;
        }
    }
    
}
